<Window x:Class="ShopControlApp.MsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopControlApp"
        mc:Ignorable="d" Style="{DynamicResource WindowColor}"
        Title="Сообщение" Height="252.253" Width="433.662" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="AntiqueWhite">
    <Grid  Style="{DynamicResource GridBackground}">
        <TextBlock  Style="{DynamicResource TextColor}" HorizontalAlignment="Center" FontSize="18"  Margin="34,10,0,0" Text="{Binding Article}" VerticalAlignment="Top" Height="35" Width="356"/>
        <TextBlock  Style="{DynamicResource TextColor}" HorizontalAlignment="Left" FontSize="18"  Margin="25,50,0,0" Text="{Binding Description}" TextWrapping="Wrap"  VerticalAlignment="Top" Height="127" Width="379"/>
        <Button Style="{DynamicResource ButtonStyle}" Content="{DynamicResource msgBoxAccept}"  FontSize="18"  HorizontalAlignment="Left" Margin="150,177,0,0" VerticalAlignment="Top" Width="113" Click="Button_Click"/>

    </Grid>
</Window>
