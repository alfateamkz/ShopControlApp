<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ButtonStyle" TargetType="Button" >
        <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        <Setter Property="Background" Value="Black"></Setter>
    </Style>
    <Style x:Key="GridBackground" TargetType="Grid" >
        <Setter Property="Background" Value="BurlyWood"></Setter>
    </Style>
    <Style x:Key="TextColor" TargetType="TextBlock" >
        <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
    </Style>
    <Style x:Key="WindowColor" TargetType="Window" >
        <Setter Property="Foreground" Value="DarkSlateGray"></Setter>
    </Style>
    <Style x:Key="MenuItemStyle" TargetType="MenuItem" >
        <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        <Setter Property="Background" Value="Black"></Setter>
    </Style>
    <Style x:Key="DGBackground" TargetType="DataGrid" >
        <Setter Property="Background" Value="DarkSlateGray"></Setter>
    </Style>
</ResourceDictionary>